<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.order.form.inherit.variant_assistant</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form/header" position="after">
                    <group>
                        <group>
                            <field name="variant_assistant_product_template_id"/>
                            <field name="variant_assistant_attribute_choice_ids"
                                   attrs="{'invisible': [('variant_assistant_product_template_id', '=', False)]}">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="attribute_id" readonly="1"
                                           domain="[('value_ids.product_ids.product_tmpl_id', '=', parent.variant_assistant_product_template_id)]"/>
                                    <field name="value_id"
                                           domain="[('attribute_id', '=', attribute_id), ('product_ids.product_tmpl_id', '=', parent.variant_assistant_product_template_id)]"
                                           options="{'no_create': True, 'no_create_edit': True}"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
